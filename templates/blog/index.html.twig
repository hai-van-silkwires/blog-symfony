{% extends 'base.html.twig' %}

{% block title %}Homepage{% endblock %}

{% block stylesheets %}
<style>
</style>
{% endblock %}

{% block main_content %}
<div id='blog-index'>
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    {% for blog in listBlogs %}
        <div class='blog-item'>
            <div class='blog-item-img'>
                <img src="{{ blog.feature_image }}">
            </div>
            <div class='blog-item-content'>
                <a href="{{ path('blog_detail', {'id': blog.id}) }}">
                    <h5>{{ blog.title }}</h5>
                </a>
                <div class='blog-item-content-date'>{{ blog.created_at|date("d/m/Y H:i:s") }}</div>
                <p>{{ blog.short_description }}</p>
            </div>
        </div>
    {% endfor %}

</div>
{% endblock %}

